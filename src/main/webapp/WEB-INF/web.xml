<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>News space portal</display-name>
    <welcome-file-list>
        <welcome-file>project.view.servlet.MainPageServlet</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <servlet-class>project.view.servlet.MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterFormServlet</servlet-name>
        <servlet-class>project.view.servlet.RegisterFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterFormServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginFormServlet</servlet-name>
        <servlet-class>project.view.servlet.LoginFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginFormServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TestFormServlet</servlet-name>
        <servlet-class>project.view.servlet.TestFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestFormServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArticlePageServlet</servlet-name>
        <servlet-class>project.view.servlet.ArticlePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticlePageServlet</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArticlesPageServlet</servlet-name>
        <servlet-class>project.view.servlet.ArticlesPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticlesPageServlet</servlet-name>
        <url-pattern>/articles</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>project.view.util.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AboutMe</servlet-name>
        <servlet-class>project.view.servlet.AboutMeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutMe</servlet-name>
        <url-pattern>/about_me</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Copyright</servlet-name>
        <servlet-class>project.view.servlet.CopyrightPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Copyright</servlet-name>
        <url-pattern>/copyright</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
</web-app>
